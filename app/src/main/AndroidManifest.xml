<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyStepper2"
        tools:targetApi="31">
        <activity
            android:name=".ui.presentation.main.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyStepper2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=  ".ui.presentation.samples.StepperNoUpNavActivity"
            android:label="@string/title_no_up_nav_stepper" />
        <activity
            android:name=".ui.presentation.samples.ProgressStepperActivity"
            android:label="@string/title_progress_stepper" />
        <activity
            android:name=".ui.presentation.samples.FleetsStepperActivity"
            android:label="@string/title_fleets_stepper" />
        <activity
            android:name=".ui.presentation.samples.TabStepperActivity"
            android:label="@string/title_tab_stepper" />
        <activity
            android:name=".ui.presentation.samples.NumberedTabStepperActivity"
            android:label="@string/title_tab_numbered_stepper" />
        <activity
            android:name=".ui.presentation.samples.FadeAnimStepperActivity"
            android:label="@string/title_fade_anim_stepper" />
        <activity
            android:name=".ui.presentation.samples.TabStepperWithoutNavigationComponentsActivity"
            android:label="@string/title_without_navigation_components" />
        <activity
            android:name=".ui.presentation.samples.TabStepperWithOverflowActivity"
            android:label="@string/title_with_overflow" />


    </application>

</manifest>